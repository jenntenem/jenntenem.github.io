---

<section>
  <div class="container">
    <h2>Technologies</h2>
    <div class="skills">
      {
        skills.map((skill) => {
          return (
            <div class="skill">
              <span>
                <Icon
                  pack={skill.icon.pack}
                  name={skill.icon.name}
                  width="80px"
                />
              </span>
              <span class="name">{skill.name}</span>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style lang="scss">
  section {
    padding: var(--base-size-16);

    div.container {
      display: flex;
