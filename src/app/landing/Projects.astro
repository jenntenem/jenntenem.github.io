        border: 1px solid rgba(#e7eef3, 0.15);
        background-color: rgba(#e7eef3, 0.05);

        h3 {
          font-size: var(--base-size-24);
          font-weight: var(--base-text-weight-light);
          color: #39d353;
        }

        .btn-project {
          display: flex;
          flex-direction: row;
          align-items: left;
          justify-content: center;

          .btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: none;
            background-color: transparent;
            position: relative;
            transition: 0.2s linear;

            .icon {
              color: #39d353;
              transition: 0.2s linear;
            }

            &:hover > .icon {
              transform: scale(1.2);
            }

            &:after {
              content: "";

              position: absolute;
              color: white;

              opacity: 0;
              visibility: hidden;
              transition: 0.2s linear;
            }
          }
        }
