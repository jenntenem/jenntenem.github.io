---
import { Icon } from "astro-icon";

// Data
const skills = [
  {
    name: "Html y Css",
    package: "vscode-icons:file-type-html",
  },
  {
    name: "Css",
    package: "vscode-icons:file-type-css",
  },
  {
    name: "Javascript",
    package: "logos:javascript",
  },
  {
    name: "Typescript",
    package: "logos:typescript-icon",
  },
  {
    name: "Angular",
    package: "vscode-icons:file-type-angular",
  },
  {
    name: "Python",
    package: "vscode-icons:file-type-python",
  },
  {
    name: "Nodejs",
    package: "vscode-icons:file-type-node",
  },
  {
    name: "React",
    package: "logos:react",
  },
  {
    name: "Nextjs",
    package: "logos:nextjs-icon",
  },
  {
    name: "Astro",
    package: "logos:astro",
  },
  {
    name: "Sql Server",
    package: "simple-icons:microsoftsqlserver",
  },
  {
    name: "Postgresql",
    package: "logos:postgresql",
  },
];
---

<section>
  <h2>Skills</h2>
  <div class="skills">
    {
      skills.map((skill) => {
        return (
          <div class="skill">
            <span>
              <Icon name={skill.package} width="80px" />
            </span>
            <span class="name">{skill.name}</span>
          </div>
        );
      })
    }
  </div>
</section>

<style lang="scss">
  .skills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0;

    > .skill {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      width: 100px;
      height: 100px;
      //   border-radius: 10px;
      //   background-color: #f5f5f5;
      padding: 1rem;
      //   box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);

      > .name {
        font-size: 0.8rem;
        font-weight: 600;
        text-align: center;
      }
    }
  }
</style>
