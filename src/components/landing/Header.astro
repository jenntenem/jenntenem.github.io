---
import { Icon } from "astro-icon";

// Menu Data
const myMenu = [
  { name: "Home", url: "/" },
  { name: "About Me", url: "#about" },
  { name: "Contact", url: "#contact" },
  { name: "Projects", url: "#projects" },
  { icon: "logo-github", url: "https://github.com/jenntenem" },
];
---

<header>
  <div class="menu-container">
    <!-- Logo -->
    <a href="/">
      <img
        src={(await import("../assets/img/logo.svg")).default}
        alt="My Logo"
        width="47"
        height="37"
      />
    </a>
    <!-- Menu -->
    <div class="wrapper">
      <nav>
        <ul>
          {
            myMenu.map((item) => (
              <li>
                <a href={item.url} aria-label={item.name}>
                  {item.name}
                  {item.icon && <Icon pack="ion" name="logo-github" />}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <button>
        <Icon name="iconoir:moon-sat" class="light" />
        <!-- <Icon name="iconoir:sun-light" /> -->
      </button>
    </div>
  </div>
</header>

<style lang="scss">
  @use "../../assets/scss/base/_container" as *;

  header {
    position: fixed;
    padding: 0;
    @extend .container;

    .menu-container {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      align-items: center;

      .wrapper {
        display: flex;
        align-items: center;
        gap: 1rem;

        nav {
          ul {
            display: flex;
            gap: 1.5rem;
            list-style-type: none;
            background-color: var(--neutral-100);

            a,
            button {
              text-decoration: none;
              font-size: 1.125rem;
              line-height: 1.6875rem;
              transition: color 0.15s ease-in-out;
            }

            a:hover,
            a:focus {
              text-decoration: underline;
              text-decoration-thickness: 1px;
              text-decoration-style: wavy;
              text-underline-offset: 7px;
              font-weight: bold;
            }
          }
        }

        button {
          background-color: transparent;
          border: none;
          cursor: pointer;
          transition: color 0.15s ease-in-out;
          border-radius: 100%;

          .light {
            width: 25px;
            height: 25px;
          }

          &:hover,
          &:focus {
            color: var(--primary-500);
          }
        }
      }
    }
  }
</style>
